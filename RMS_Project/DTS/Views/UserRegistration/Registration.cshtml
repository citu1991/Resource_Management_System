@model DTS.Models.UserRegistration
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />   
    <title>Registration</title>
    <link href="~/dist/css/styles.css" rel="stylesheet" />    
    <script data-search-pseudo-elements defer src="~/dist/Online/all.min.js" crossorigin="anonymous"></script>
    <script src="~/dist/Online/feather.min.js" crossorigin="anonymous"></script>
</head>
<body style="background-color:darkseagreen"> 

    @*<div class="alert alert-primary alert-dismissible fade show col-6 offset-3" role="alertdialog">
        <h5 class="modal-heading">Message</h5>
        @ViewBag.Message
        <button class="close" type="button" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>*@
    
    @using (Html.BeginForm("Registration", "UserRegistration", FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card shadow-lg border-1 rounded-lg mt-5">
                        <div class="card-header justify-content-center"><h2 class="font-weight-light">Register Here</h2></div>
                        <div class="card-body">
                            <form>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">First Name</label>
                                            @Html.EditorFor(model => model.UserFname, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.UserFname, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Last Name</label>
                                            @Html.EditorFor(model => model.UserLname, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.UserLname, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Email Id</label>
                                            @Html.EditorFor(model => model.UserEmailId, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.UserEmailId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Mobile No</label>
                                            @Html.EditorFor(model => model.UserMobNo, new { htmlAttributes = new {@max="10", @maxlength = "10",@class = "form-control"  } })
                                            @Html.ValidationMessageFor(model => model.UserMobNo, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>


                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Password</label>
                                            @Html.EditorFor(model => model.UserPwd, new {htmlAttributes = new {@class = "form-control" }})
                                            @Html.ValidationMessageFor(model => model.UserPwd, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 offset-8">
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-primary btn-block" value="Register" />
                                        </div>
                                    </div>
                                </div>


                                <div class="row" style="padding-top:15px">
                                    <div class="col-12">
                                        @if (ViewBag.Message != null && ViewBag.Message != "")
                                        {
                                        <div class="form-group">
                                            <div class="alert alert-primary alert-dismissible fade show col-12" role="alert"> 
                                                <h5 class="modal-heading">Message: </h5>                                            
                                                @ViewBag.Message
                                                <button class="close" type="button" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">×</span>
                                                </button>
                                            </div>                                           
                                        </div>
                                        }
                                    </div>
                                </div>

                            </form>
                        </div>
                        <div class="card-footer text-center">
                            <a class="d-block small mt-3" href="@Url.Action("Login","UserLogin")">Back to Login Page</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }   

    <footer class="footer mt-auto font-weight-light">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 small">Copyright &copy; DTCP 2020</div>
               
            </div>
        </div>
    </footer>

    <script src="~/dist/Online/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="~/dist/Online/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/dist/js/scripts.js" type="text/javascript"></script>
    
</body>
</html>
