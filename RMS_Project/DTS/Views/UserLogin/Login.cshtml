@model DTS.Models.UserLogin
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="~/dist/css/styles.css" rel="stylesheet" />
    <script data-search-pseudo-elements defer src="~/dist/Online/all.min.js" crossorigin="anonymous"></script>
    <script src="~/dist/Online/feather.min.js" crossorigin="anonymous"></script>
</head>
<body style="background-color:darkseagreen">
       <form>

       </form>
    @using (Html.BeginForm("Login", "UserLogin", FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-1 rounded-lg mt-5">
                        <div class="card-header justify-content-center"><h2 class="font-weight-light">Login</h2></div>
                        <div class="card-body">
                            <form>                             

                                <div class="form-row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="control-label">Email</label>
                                            @Html.EditorFor(model => model.UserEmailId, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Email Id here" } })
                                            @Html.ValidationMessageFor(model => model.UserEmailId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>                                    
                                </div>                              

                                <div class="form-row">                                   
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="control-label">Password</label>
                                            @Html.EditorFor(model => model.UserPwd, new { htmlAttributes = new { @class = "form-control",@placeholder="Enter Password here" } })
                                            @Html.ValidationMessageFor(model => model.UserPwd, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div> 

                                <div class="form-row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <a class="d-block small mt-4" href="@Url.Action("Login","Home")">Forgot Password!</a>
                                        </div>
                                    </div>

                                    <div class="col-md-4 offset-4">
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-primary btn-block" value="Login" />
                                        </div>
                                    </div>
                                </div>


                                <div class="row" style="padding-top:15px">
                                    <div class="col-12">
                                        @if (ViewBag.MessageLogin != null && ViewBag.MessageLogin != "")
                                        {
                                            <div class="form-group">
                                                <div class="alert alert-primary alert-dismissible fade show col-12" role="alert">
                                                    <h5 class="modal-heading">Message: </h5>
                                                    @ViewBag.MessageLogin
                                                    <button class="close" type="button" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>

                            </form>
                        </div>
                        <div class="card-footer text-center">
                            <a class="d-block small mt-2" href="@Url.Action("Registration","UserRegistration")">Need an account? Register Here !</a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>        
    }
    <script src="~/dist/Online/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="~/dist/Online/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/dist/js/scripts.js" type="text/javascript"></script>
</body>
</html>
