
@model System.Data.DataSet
@{
    int SrNo = 1;
}
@using System.Data;
<fieldset class="col-lg-12">  
    @if (Model != null)
    {
        <div class="form-group col-lg-12">
            <div class="table-responsive">
                <div class="tab-content">
                    <div class="tab-pane container active p-1" id="InboxCPU">
                        <h5 class="p-0 text-center"><b>Employee Detail</b></h5>
                        <table class="table table-bordered table-striped mt-2 small">
                            <thead class="thead-dark text-white">                               
                                <tr>                                   
                                    <th>Sr. No.</th>
                                    <th>Payee Code</th>
                                    <th>Name</th>
                                    <th>Designation</th>
                                    <th>Mobile No</th>
                                    <th>Device Allocation Date</th>
                                    <th>Allocation Status</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model.Tables[0].Rows.Count > 0)
                                {
                                    foreach (DataRow row in Model.Tables[0].Rows)
                                    {

                                        <tr>                                          
                                            <td>@SrNo.</td>
                                            <td>@row["PayeeCode"] </td>
                                            <td>@row["EmployeeName"] </td>
                                            <td>@row["Designation"] </td>
                                            <td>@row["MobileNo"] </td>
                                            <td>@row["AllocationDate"].ToString().Split(' ')[0] </td>
                                            @if (@row["AllocationStatus"].ToString().Equals("Old"))
                                            {
                                                <td style="color:white;background-color:orangered">
                                                    Old
                                                </td>
                                            }
                                            else
                                            {
                                                <td style="color:white;background-color:darkseagreen">
                                                    Last
                                                </td>
                                            }    
                                        </tr>
                                        SrNo++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" style="color: red; text-align: center">No Data Exists.</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</fieldset>


