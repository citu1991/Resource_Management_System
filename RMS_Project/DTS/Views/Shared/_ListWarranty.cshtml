@model DTS.Models.WarrantyModel
@{
    var SRNO = 1;
}

<form style="padding-top:15px">
    <hr />
    <h2>List of Warrantys</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    Sr. No
                </th>
                <th>
                    Warranty Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        @if (Model.LIST_WARRANTY.Count > 0 && Model.LIST_WARRANTY[0].Message == null)
        {
            foreach (var item in Model.LIST_WARRANTY)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.WarrantyId, new { @class = "WarrantyId" })
                        @SRNO
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Warranty)
                    </td>
                    <td>
                        <button type="button" class="btn btn-success" onclick="EditWarranty(@item.WarrantyId)">Edit</button>
                        <button type="button" class="btn btn-danger" onclick="DeleteWarranty(@item.WarrantyId)">Delete</button>

                    </td>
                </tr>
                SRNO++;
            }
        }
        else
        {
            <tr class="table-danger">
                <td colspan="3" style="text-align: center">No Data Exists</td>
            </tr>
        }
    </table>
</form>


