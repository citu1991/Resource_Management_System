@model DTS.Models.RAMSizeModel
@{
    var SRNO = 1;
}

<form style="padding-top:15px">
    <hr />
    <h2>List of Ram Sizes</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    Sr. No
                </th>
                <th>
                    RAM Size
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        @if (Model.LIST_RAMSIZE.Count > 0 && Model.LIST_RAMSIZE[0].Error == null)
        {
            foreach (var item in Model.LIST_RAMSIZE)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.RAMId, new { @class = "RAMId" })
                        @SRNO
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RAMCapacity)
                    </td>
                    <td>
                        <button type="button" class="btn btn-success" onclick="EditRAM(@item.RAMId)">Edit</button>
                        <button type="button" class="btn btn-danger" onclick="DeleteMaker(@item.RAMId)">Delete</button>

                    </td>
                </tr>
                SRNO++;
            }
        }
        else
        {
            <tr class="table-danger">
                <td colspan="3" style="text-align: center">No Data Exists</td>
            </tr>
        }
    </table>
</form>




