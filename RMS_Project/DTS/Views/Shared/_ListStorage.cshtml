@model DTS.Models.StorageModel
@{
    var SRNO = 1;
}

<form style="padding-top:15px">
    <hr />
    <h2>List of Storage</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    Sr. No
                </th>
                <th>
                    Storage Size
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        @if (Model.LIST_STORAGE.Count > 0 && Model.LIST_STORAGE[0].Error == null)
        {
            foreach (var item in Model.LIST_STORAGE)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.StorageId, new { @class = "StorageId" })
                        @SRNO
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StorageSize)
                    </td>
                    <td>
                        <button type="button" class="btn btn-success" onclick="EditStorage(@item.StorageId)">Edit</button>
                        <button type="button" class="btn btn-danger" onclick="DeleteMaker(@item.StorageId)">Delete</button>

                    </td>
                </tr>
                SRNO++;
            }
        }
        else
        {
            <tr class="table-danger">
                <td colspan="3" style="text-align: center">No Data Exists</td>
            </tr>
        }
    </table>
</form>




